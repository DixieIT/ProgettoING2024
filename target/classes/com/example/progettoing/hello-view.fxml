<AnchorPane fx:id="mainAnchorPane" style="--border-color: black;" prefHeight="869.0" prefWidth="2013.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane layoutY="568.0" prefHeight="266.0" prefWidth="1304.0">
            <children>

                <!-- TableView Area -->
                <HBox layoutY="70.0" prefHeight="299.0" prefWidth="1304.0">
                    <children>
                        <TableView fx:id="deltaTableView" prefHeight="299.0" prefWidth="652.0">
                            <columns>
                                <TableColumn fx:id="currentStateColumn" prefWidth="209.60000306367874" text="Current State" />
                                <TableColumn fx:id="inputColumn" prefWidth="217.59999084472656" text="Input" />
                                <TableColumn fx:id="nextStateColumn" minWidth="0.0" prefWidth="224.7999267578125" text="Next State" />
                            </columns>
                        </TableView>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
        <AnchorPane fx:id="stateAnchorPane" prefHeight="567.0" prefWidth="1728.0">
            <children>
                <Line endX="-62.0" layoutX="116.0" layoutY="245.0" opacity="0.8" startX="-89.0" strokeWidth="1.27" />
                <Line endX="-62.0" layoutX="117.0" layoutY="243.0" opacity="0.67" rotate="20.0" startX="-73.0" />
                <Line endX="-62.0" layoutX="117.0" layoutY="247.0" opacity="0.67" rotate="160.0" startX="-73.0" />
                <!-- State Diagram Area -->
                <StackPane fx:id="q0" layoutX="48.0" layoutY="148.0" prefHeight="200.0" prefWidth="104.0">
                    <children>
                        <Circle fill="WHITE" radius="46.0" stroke="BLACK" strokeType="INSIDE" />
                        <TextField fx:id="StateText" prefHeight="25.0" prefWidth="73.0" text="q0" />
                    </children>
                </StackPane>

                <!-- Test String Area -->
                <TextField fx:id="testStringTextField" layoutX="88.0" layoutY="38.0" prefHeight="25.0" prefWidth="325.0" promptText="Test String" />
                <Button layoutX="444.0" layoutY="38.0" mnemonicParsing="false" onAction="#handleTestString" text="Test String" />
            </children>
        </AnchorPane>
        <Label fx:id="resultLabel" layoutX="839.0" layoutY="840.0" />
        <AnchorPane layoutX="839.0" layoutY="17.0" prefHeight="200.0" prefWidth="493.0">
            <children>
                <!-- Sidebar VBox -->
                <VBox alignment="BOTTOM_RIGHT" layoutY="554.0" prefHeight="282.0" prefWidth="463.0" spacing="10">
                    <children>
                        <MenuButton mnemonicParsing="false" onAction="#handleAddTransition" prefHeight="0.0" prefWidth="463.0" text="Transition">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Current State">
                                    <graphic>
                                        <TextField fx:id="currentStateTextField" prefHeight="25.0" prefWidth="200.0" promptText="Current State" />
                                    </graphic>
                                </MenuItem>
                                <MenuItem mnemonicParsing="false" text="Transition Input">
                                    <graphic>
                                        <TextField fx:id="transitionInputTextField" prefHeight="25.0" prefWidth="200.0" promptText="Transition Input" />
                                    </graphic>
                                </MenuItem>
                                <MenuItem mnemonicParsing="false" text="Next State">
                                    <graphic>
                                        <TextField fx:id="nextStateTextField" prefHeight="25.0" prefWidth="200.0" promptText="Next State" />
                                    </graphic>
                                </MenuItem>
                            </items>
                        </MenuButton>
                        <Button fx:id="addTransitionButton" onAction="#handleAddTransition" prefHeight="25.0" prefWidth="252.0" text="Add Transition" />
                        <MenuButton fx:id="addNewString" mnemonicParsing="false" prefHeight="35.0" prefWidth="472.0" text="Alphabet">
                            <items>
                                <MenuItem mnemonicParsing="false" text="new String">
                                    <graphic>
                                        <TextField fx:id="newStringTextField" prefHeight="25.0" prefWidth="200.0" promptText="New String" />
                                    </graphic>
                                </MenuItem>
                            </items>
                            <graphic>
                                <TextField fx:id="sigmaTextField" editable="false" prefHeight="25.0" prefWidth="200.0" promptText="Sigma" />
                            </graphic>
                        </MenuButton>
                        <Button fx:id="addNewString" onAction="#handleAddString" prefHeight="25.0" prefWidth="250.0" text="Add String">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                  </Button>
                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                            <children>
                                <Button fx:id="AddState" onAction="#handleAddState" prefHeight="25.0" prefWidth="250.0" text="Add State" />
                                <Button fx:id="AddFinalState" onAction="#handleAddFinalState" prefHeight="25.0" prefWidth="250.0" text="Add F State" />
                            </children>
                            <padding>
                                <Insets left="10.0" right="10.0" />
                            </padding>
                        </HBox>
                    </children>
                </VBox>
            </children>
      </AnchorPane>
    </children>
</AnchorPane>
